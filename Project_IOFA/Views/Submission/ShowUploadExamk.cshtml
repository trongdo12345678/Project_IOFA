@model ProjectSem3.Models.Submission
@{
    Layout = "_LayoutStudentUser";
}
<div class="container-fluid page-header py-5 mb-5">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Recent Competition</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-white" href="#">Competition</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Contest entered</a></li>
            </ol>
        </nav>
    </div>
</div>
<!-- Quote Start -->
<div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
    <div class="container quote px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-3"></div>
            <div class="col-lg-9 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-9 pe-lg-0">
                    <div class="section-title text-start">
                        <h1 class="text-center" >Submit your entry</h1>
                    </div>
                    <p class="mb-4 pb-2 text-center">Contest entries will be graded by instructors as fairly as possible.<br> Candidates must submit entries that are on the topic of the contest!</p>
                    <form asp-controller="Submission" asp-action="UploadExamk" method="post">
                        <div class="row g-3">
                            <input type="hidden" asp-for="Status" class="form-control border-0">
                            <input type="hidden" name="compeid" value="@ViewBag.compe" class="form-control border-0">
                            <div class="col-12 col-sm-12">
                                <select asp-for="ArtworkId" class="form-select border-0" style="height: 55px;">
                                    <option selected>--Select ArtWork--</option>
                                    @foreach (var art in ViewBag.Art)
                                    {
                                        <option value="@art.ArtworkId">@art.ArtworkName</option>
                                    }
                                    
                                </select>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div style="color: red;">@ViewBag.ErrorMessage</div>
                            }
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quote End -->

