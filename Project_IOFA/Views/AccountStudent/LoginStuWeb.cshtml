@{
    Layout = "_LayoutStudentUser";
}
@model ProjectSem3.Models.Student
<div class="container-fluid page-header py-5 mb-5">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Login Student</h1>
    </div>
</div>
@if (TempData["Mess"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Mess"]
    </div>
}
<div class="container-fluid bg-light overflow-hidden px-lg-0" style="margin: 6rem 0;">
    <div class="container quote px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="position-absolute img-fluid w-100 h-100" src="~/content/img/quote.jpg" style="object-fit: cover;" alt="">
                </div>
            </div>
            <div class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeIn;">
                <div class="p-lg-5 pe-lg-0">
                    <div class="section-title text-start">
                        <h1 class="display-5 mb-4">Login Student</h1>
                    </div>
                    <p class="mb-4 pb-2">Tempor erat elitr rebum at clita. Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat ipsum et lorem et sit, sed stet lorem sit clita duo justo erat amet</p>
                    <form asp-controller="AccountStudent" asp-action="LoginStu" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <input asp-for="Email" type="email" class="form-control border-0" placeholder="Email" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <div style="color: red;">@ViewBag.ErrorMessage</div>
                                }
                                <input asp-for="Password" type="password" class="form-control border-0" placeholder="Password" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Login</button>
                            </div>
                            <div class="col-12">
                                <label class="btn btn-success" style="padding:7px;margin-top: 30px;margin-left: 445px;">
                                    <a style="color:white" asp-action="ShowRequestOTP">Forgot password ?</a>
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>