
@model ProjectSem3.Models.Competition
@{
    Layout = "_LayoutStudentUser";
}
<div class="container-fluid page-header py-5 mb-5">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Details Competition</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-white" href="#">Details Competition</a></li>
            </ol>
        </nav>
    </div>
</div>
<div class="container-fluid bg-light overflow-hidden px-lg-0" style="margin: 6rem 0;">
    <div class="container feature px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 feature-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 ps-lg-0">
                    <div class="section-title text-start">
                        <h1 class="display-5 mb-4">@ViewBag.compe.CompetitionName</h1>
                    </div>
                    <p class="mb-4 pb-2">@ViewBag.compe.Description</p>
                    <div class="row g-4">
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-check fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2">Awards</p>
                                    <h5 class="mb-0">@ViewBag.compe.Awards</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-user-check fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2">Teacher</p>
                                    <h5 class="mb-0">TeacherName</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-drafting-compass fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2">Start Time</p>
                                    <h5 class="mb-0">@ViewBag.compe.StartDate</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-white" style="width: 60px; height: 60px;">
                                    <i class="fa fa-drafting-compass fa-2x text-primary"></i>
                                </div>
                                <div class="ms-4">
                                    <p class="mb-2">End Time</p>
                                    <h5 class="mb-0">@ViewBag.compe.EndDate</h5>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            @if (ViewBag.checklogin == "")
                            {
                                <label style="padding:10px;background-color:#AB7442;padding:16px;margin-left: 40%;margin-top: 30px;">
                                    <a style="color:white;" asp-controller="AccountStudent" asp-action="LoginStuWeb">Contest Now</a>
                                </label>
                            }
                            else
                            {
                                <label style="padding:10px;background-color:#AB7442;padding:16px;margin-left: 40%;margin-top: 30px;">
                                    <a style="color:white;" asp-controller="Submission" asp-action="ShowUploadExamk" asp-route-id="@ViewBag.compe.CompetitionId">Contest Now</a>
                                </label>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 pe-lg-0" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="position-absolute img-fluid w-100 h-100" src="@ViewBag.compe.Img" style="object-fit: cover;" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

